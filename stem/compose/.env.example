# identity (template defaults)
STEM_USER=dev
STEM_UID=1000
STEM_GID=1000
TZ=America/Los_Angeles

# container naming (avoid collisions)
STEM_CONTAINER_NAME=dev-stem
STEM_HOSTNAME=stem

# keep high so it never collides with host ssh
STEM_SSH_PORT=22222

# ssh auth mode (entrypoint expects 1/0)
# 1 = allow password login (requires STEM_SSH_PASSWORD)
# 0 = password disabled; keys only
STEM_SSH_PASSWORD_AUTH=0
STEM_SSH_PASSWORD=

# bindu bootstrap (optional)
BINDU_REPO=https://github.com/suhailphotos/bindu.git
BINDU_REF=main

# terminal
TERM=xterm-256color
COLORTERM=truecolor

# host paths (recommend absolute or ~)
STEM_AUTH_KEYS_FILE=~/.ssh/authorized_keys

# workspace mount
# for this compose folder, default to repo root (one level up)
STEM_WORKSPACE=..

# optional
APOGEE_VERSION=
