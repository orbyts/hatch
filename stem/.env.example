# -----------------------------
# image (optional override)
# -----------------------------
# Default is suhailphotos/stem:latest from docker-compose.yml
# STEM_IMAGE=suhailphotos/stem:latest

# -----------------------------
# container identity + ssh
# -----------------------------
STEM_CONTAINER_NAME=stem
STEM_HOSTNAME=stem
STEM_SSH_PORT=22222

# -----------------------------
# user mapping
# -----------------------------
STEM_USER=dev
STEM_UID=1000
STEM_GID=1000

# -----------------------------
# pixi knobs (optional)
# -----------------------------
STEM_PIXI_ENABLE=1
STEM_PIXI_STOW=auto
STEM_PIXI_GLOBAL_SYNC=0

# -----------------------------
# optional mounts
# -----------------------------
# Optional Dropbox bind mount (leave blank to disable)
# Examples:
#   /home/<you>/Dropbox
#   /Users/<you>/Library/CloudStorage/Dropbox
DROPBOX_PATH_ON_HOST=

# Optional: inject authorized keys (public key or authorized_keys file) for SSH login
# Examples:
#   /home/<you>/.ssh/id_ed25519.pub
#   /home/<you>/.ssh/authorized_keys
STEM_AUTH_KEYS_PATH=

# Optional: mount docker-host SSH agent socket into the container
# Example (Linux): /run/user/1000/ssh-agent.socket
STEM_SSH_AUTH_SOCK_HOST=

# Optional: mount apogee secrets.env into container (your bootstrap can copy it into place)
APOGEE_SECRETS_PATH=

# -----------------------------
# bootstrap / runtime knobs
# -----------------------------
STEM_PASSWORD=change-me
APOGEE_UV_DEFAULT_PY=3.11.7

# -----------------------------
# bindu (dotfiles bootstrap) (optional)
# -----------------------------
BINDU_REPO=
BINDU_REF=main
BINDU_FORCE=0
